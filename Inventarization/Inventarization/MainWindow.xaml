<Window x:Class="Inventarization.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Inventarization"
        mc:Ignorable="d"
        
        Title="Главное меню" 
        Height="800" 
        Width="1200"
        
        MinHeight="790"
        MinWidth="1190"
        
        Icon="Resources/icon.ico"
        WindowStartupLocation="CenterScreen"
        Name="mainWindowApp">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Image Grid.Column="2"
                   Source="Resources/logo.png"
                   Margin="10"/>

            <StackPanel Grid.Column="0"
                        Margin="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <TextBlock Name="statusUser"
                           Text="Роль: Иванов Иван Иванович"
                           Width="300"
                           TextAlignment="Center"/>
                <Button Name="logoutButton"
                        Height="24"
                        Width="100"
                        Margin="10"
                        Content="Выход"
                        Click="logoutButton_Click"/>
            </StackPanel>

            <StackPanel Grid.Column="1"
                        Margin="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <TextBlock Text="Сортировка"
                           TextAlignment="Center"/>
                <ComboBox Margin="10"
                          Name="sortProductsComboBox"
                          Height="24"
                          Width="150"
                          SelectionChanged="sortProductsComboBox_SelectionChanged"/>
            </StackPanel>

            <StackPanel Margin="1" 
                        Grid.Column="3" 
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <TextBlock Text="Фильтр" 
                           TextAlignment="Center"/>
                <ComboBox Margin="10" 
                          Name="filterProductsComboBox"
                          Height="24" 
                          Width="150"     
                          SelectionChanged="filterProductsComboBox_SelectionChanged"/>
            </StackPanel>

            <StackPanel Margin="1" 
                        Grid.Column="4" 
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <TextBlock Text="Поиск" 
                           TextAlignment="Center"/>
                <TextBox Margin="10" 
                         Name="searchTextBox"
                         Height="24" 
                         Width="150"     
                         TextChanged="searchTextBox_TextChanged"/>
            </StackPanel>

            <StackPanel Margin="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Grid.Column="5">
                <TextBlock TextAlignment="Center"
                           Name="countTextBlock"
                           Text="Количество: "/>
                <Button Name="clearButton"
                        Height="24"
                        Width="100"
                        Margin="10"
                        Content="Очистить"
                        Click="clearButton_Click"/>
            </StackPanel>
        </Grid>

        <ListView Grid.Row="1"
                  x:Name="productlistView"
	              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  HorizontalContentAlignment="Center">
            
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"
                               HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Width="250">
                        <TextBlock Text="{Binding Name}"
				                   VerticalAlignment="Center"
				                   TextAlignment="Center"
				                   TextWrapping="Wrap"
				                   HorizontalAlignment="Center"
				                   Margin="0"
                                   FontSize="16"/>
                        <Border BorderBrush="#FF498C51" BorderThickness="2">
                            <Image 
			                       HorizontalAlignment="Center"
			                       Height="200"
			                       Width="250"
                                   ToolTip="{Binding Description}">
                                <Image.Source>
                                    <BitmapImage UriSource = "{Binding ImagePath}" CacheOption="OnLoad">
                                    </BitmapImage>
                                </Image.Source>
                            </Image>
                        </Border>
                        <TextBlock Text="{Binding ArticleNumber, StringFormat=Артикул: {0}}"
				                   VerticalAlignment="Center"
				                   TextAlignment="Center"
				                   TextWrapping="Wrap"
				                   HorizontalAlignment="Left"
				                   Margin="0"
                                   FontSize="14"/>
                        <TextBlock Text="{Binding Manufacturer, StringFormat=Производитель: {0}}"
				                   VerticalAlignment="Center"
				                   TextAlignment="Center"
				                   TextWrapping="Wrap"
				                   HorizontalAlignment="Left"
				                   Margin="0"
                                   FontSize="14"/>
                        <TextBlock Text="{Binding Cost, StringFormat=Стоимость: {0}}"
				                   VerticalAlignment="Center"
				                   TextAlignment="Center"
				                   TextWrapping="Wrap"
				                   HorizontalAlignment="Left"
				                   Margin="0"
                                   FontSize="14"/>
                        <TextBlock Text="{Binding DiscountAmount, StringFormat=Скидка: {0}%}"
				                   VerticalAlignment="Center"
				                   TextAlignment="Center"
				                   TextWrapping="Wrap"
				                   HorizontalAlignment="Left"
				                   Margin="0"
                                   FontSize="14"/>
                        <TextBlock Text="{Binding QuantityInStock, StringFormat=В наличии: {0}}"
				                   VerticalAlignment="Center"
				                   TextAlignment="Center"
				                   TextWrapping="Wrap"
				                   HorizontalAlignment="Left"
				                   Margin="0"
                                   FontSize="14"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
            
        </ListView>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Name="adminStackPanel">
            
            <Button Name="addProductButton"
                    Width="150"
                    Height="24"
                    Content="Добавить товар"
                    Click="addProductButton_Click"
                    Margin="5"/>
            <Button Name="deleteProductButton"
                    Width="150"
                    Height="24"
                    Content="Удалить товар"
                    Click="deleteProductButton_Click"
                    Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
